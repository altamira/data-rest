<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <!-- TODO: check if you really want to use the process engine datasource. 
		Note that the following is written for JBoss AS 7 -->
  <persistence-unit name="ExampleDS" transaction-type="JTA">
    <jta-data-source>java:jboss/datasources/ExampleDS</jta-data-source>
    <class>br.com.altamira.data.model.manufacturing.bom.BOM</class>
    <class>br.com.altamira.data.model.manufacturing.bom.BOMItem</class>
    <class>br.com.altamira.data.model.manufacturing.bom.BOMItemPart</class>
    <class>br.com.altamira.data.model.manufacturing.order.Order</class>
    <class>br.com.altamira.data.model.manufacturing.order.OrderItem</class>
    <class>br.com.altamira.data.model.manufacturing.order.OrderItemPart</class>
    <class>br.com.altamira.data.model.manufacturing.process.Consume</class>
    <class>br.com.altamira.data.model.manufacturing.process.Operation</class>
    <class>br.com.altamira.data.model.manufacturing.process.Process</class>
    <class>br.com.altamira.data.model.manufacturing.process.Produce</class>
    <class>br.com.altamira.data.model.manufacturing.process.Revision</class>
    <class>br.com.altamira.data.model.manufacturing.process.Sketch</class>
    <class>br.com.altamira.data.model.manufacturing.process.Use</class>
    <class>br.com.altamira.data.model.measurement.Magnitude</class>
    <class>br.com.altamira.data.model.measurement.Unit</class>
    <class>br.com.altamira.data.model.purchasing.Material</class>
    <class>br.com.altamira.data.model.purchasing.Request</class>
    <class>br.com.altamira.data.model.purchasing.RequestItem</class>
    <class>br.com.altamira.data.model.sales.Order</class>
    <class>br.com.altamira.data.model.sales.OrderItem</class>
    <class>br.com.altamira.data.model.sales.OrderItemPart</class>
    <class>br.com.altamira.data.model.sales.Product</class>
    <class>br.com.altamira.data.dao.BaseDao</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="hibernate.hbm2ddl.auto" value="create"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
      <!-- <property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect" />
			<property name="hibernate.hbm2ddl.auto" value="validate" /> -->
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
